<Window x:Class="ShoesStore.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoesStore"
        mc:Ignorable="d" Style="{StaticResource Windows}"
        Title="Товары" Height="800" Width="1200"
        Name="GoodWindow"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="150"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="fullUserName"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Right"
                   Margin="80 10"/>

        <ScrollViewer Grid.Row="1">
            <!--Карточка товара-->
            <ItemsControl Name="goodList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="1" Tag="{Binding Id}" Background="{Binding Background}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"
                                        Width="80"
                                        Height="80"
                                        Margin="15 0">
                                    <Image Source="{Binding PicturePass}"/>
                                </Border>

                                <StackPanel Grid.Column="1">

                                    <TextBlock FontWeight="SemiBold">
                                        <Run Text="{Binding GoodCategory.Name}"/>

                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Описание: "/>
                                        <TextBlock Text="{Binding Description}"
                                                   TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Поставщик: "/>
                                        <TextBlock Text="{Binding Supplier.Name}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Производитель: "/>
                                        <TextBlock Text="{Binding Manufacture.Name}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Цена: "/>
                                        <TextBlock Text="{Binding Price, StringFormat=C2}"/>
                                        <TextBlock Text="   "/>
                                        <TextBlock 
                                            Text="{Binding OldPrice, StringFormat=C2}"
                                            Foreground="Red"
                                            TextDecorations="Strikethrough"
                                            />
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Ед. измерения: "/>
                                        <TextBlock Text="{Binding UnitOfMeaserent}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Количество: "/>
                                        <TextBlock Text="{Binding CountInStorage}"/>
                                    </StackPanel>

                                </StackPanel>

                                <!--Скидка-->
                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="10">
                                    <TextBlock Text="Действующая Скидка" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding Discount}" HorizontalAlignment="Right"/>
                                </StackPanel>

                                <!--Редактировать товар-->
                                <StackPanel Visibility="{Binding ElementName=GoodWindow, Path=AdminVisibility}">
                                    <Button 
                                    Content="Редактировать"
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Right"
                                    Click="EditItemButtonClick"
                                    Tag="{Binding}"/>
                                </StackPanel>




                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button
            x:Name="loggoutButton"
            Content="Выйти"
            Grid.Row="2"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Margin="20 0"
            Click="LogOutButtonClick"/>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Stretch">
            <TextBlock x:Name="currentUserName" Margin="20 10" HorizontalAlignment="Right"/>
            <TextBlock x:Name="currentUserSurname" Margin="20 10" HorizontalAlignment="Right"/>
            <TextBlock x:Name="currentUserPatronymic" Margin="20 10" HorizontalAlignment="Right"/>
        </StackPanel>

        <!--Сортировка по количеству-->
        <StackPanel Visibility="{Binding AdminOrManagerVisibility}" RenderTransformOrigin="0.492,0.554">
            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Margin="20 30 0 0">

                <TextBlock 
                    Text="Сортировка по количеству: "
                    FontWeight="SemiBold"/>

                <ComboBox
                    x:Name="sortComboBox"
                    Width="170"
                    SelectedIndex="0"
                    SelectionChanged="SortComboBoxClick">
                    <ComboBoxItem Content="Нет сортировки"/>
                    <ComboBoxItem Content="По возрастанию"/>
                    <ComboBoxItem Content="По убыванию"/>
                </ComboBox>

            </StackPanel>

            <Button x:Name="goToOrders" Content="Заказы" Margin="20, 0, 30, 80" HorizontalAlignment="Left" Click="GoToOrdersClick" Width="142"/>
            <StackPanel 
                Orientation="Horizontal"
                >
                <TextBlock 
                    Text="Сортировка по поставщику: "
                    VerticalAlignment="Center"
                    Margin="20 0 3 0"
                    FontWeight="SemiBold" Width="252"/>
                <ComboBox 
                    x:Name="sortSupplier"
                    SelectionChanged="SortBySupplierSupplierClick"
                    ItemsSource="{Binding AllSuplliers}"
                    DisplayMemberPath="Name"
                    Width="170"
                    SelectedIndex="0"/>
            </StackPanel>

        </StackPanel>
        <!--Поиск товара-->
        <StackPanel Margin="10 1 1 1">
            <TextBlock
     Text="Поиск товара"
     HorizontalAlignment="Center"
     Margin="1 1 1 1"
         />

            <TextBox
     x:Name="search"
     Width="150"
     Background="LightGray"
     TextChanged="SearchTextByInputClick"/>

        </StackPanel>
        <!--добавление-->
        <StackPanel Visibility="{Binding AdminVisibility}">
            <Button
                x:Name="addGood"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25 95"
                Content="Добавить товар"
                Click="AddNewGoodClick"
                
                />


        </StackPanel>
    </Grid>
</Window>
