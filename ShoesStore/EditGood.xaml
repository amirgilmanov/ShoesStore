<Window x:Class="ShoesStore.EditGood"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoesStore"
        mc:Ignorable="d" Style="{StaticResource Windows}"
        Title="Панель администратора" Height="500" Width="800">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="180"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Margin="10" HorizontalAlignment="Center">
                <Image x:Name="ProductImage" 
                       Width="150" Height="100" 
                       Stretch="Uniform" 
                       Source="{Binding PicturePass, TargetNullValue=/Resources/picture.png}"/>
                <Button Content="Выбрать фото" Click="ChooseImageClick" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="20" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Артикуль:" Width="136"/>
                    <TextBox Name="articleInput" Text="{Binding CurrentGood.Article}" Width="200"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Наименование:" Width="136"/>
                    <TextBox x:Name="nameInput" Text="{Binding CurrentGood.Name}" Width="200"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--Категория товара-->
                <TextBlock
                    Grid.Row="0"
                    Grid.Column="0"
                    Text="Категория товара:"
                    Margin="5"
                    VerticalAlignment="Center"
                    />
                <ComboBox
                    x:Name="selectedGoodCategory"
                    Grid.Row="0"
                    Grid.Column="1"                    
                    ItemsSource="{Binding AllGoodCategories}"                    
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding CurrentGood.GoodCategory}"
                    Margin="5"
                    />
                <!--Производитель-->
                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Text="Производитель:"
                    Margin="5"
                    VerticalAlignment="Center"
                    />
                <ComboBox
                    x:Name="selectedManufacture"
                    Grid.Row="1"
                    Grid.Column="1"
                    ItemsSource="{Binding AllManufactures}" 
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding CurrentGood.Manufacture}"
                    Margin="5"/>
                <!--Поставщик-->
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Text="Поставщик:"
                    Margin="5"
                    VerticalAlignment="Center"
                    />
                <ComboBox
                    Grid.Row="2"
                    Grid.Column="1"
                    x:Name="selectedSupplier"
                    ItemsSource="{Binding AllSuppliers}" 
                    DisplayMemberPath="Name"
                    SelectedItem="{Binding CurrentGood.Supplier}"
                    Margin="5"
                    />

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Цена (руб):" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="3" Name="priceInput" Grid.Column="1" Text="{Binding CurrentGood.Price}" Margin="5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Единица измерения:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Name="unitOfMeaserentInput" Grid.Column="1" Text="{Binding CurrentGood.UnitOfMeaserent}" Margin="5"/>
            </Grid>

            <Grid Grid.Column="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Количество на складе:" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Name="countInStorageInput" Grid.Column="1" Text="{Binding CurrentGood.CountInStorage}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Действующая скидка (%):" Margin="5" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Name="discountInput" Grid.Column="1" Text="{Binding CurrentGood.Discount}" Margin="5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Описание товара:" Margin="5" VerticalAlignment="Top"/>
                <TextBox Grid.Row="3" Name="descriptionInput" Grid.Column="0" Grid.ColumnSpan="2" Text="{Binding CurrentGood.Description}" 
                         TextWrapping="Wrap" AcceptsReturn="True" Margin="5" VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0">
            <Button Content="Сохранить" Click="SaveButtonClick" Width="150" Margin="10"/>
            <Button Content="Удалить" Click="DeleteButtonClick" Width="150" Margin="10"/>
            <Button Content="Отмена" IsCancel="True" Width="150" Margin="10"/>
        </StackPanel>

    </Grid>
</Window>