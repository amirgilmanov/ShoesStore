<Window x:Class="ShoesStore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoesStore"
        mc:Ignorable="d" Style="{StaticResource Windows}"
        Title="Авторизация" Height="450" Width="800">
    <Grid x:Name="Authorization">
        <Border VerticalAlignment="Center" HorizontalAlignment="Center">
            <StackPanel Margin="60">
                <TextBlock Text="Авторизация" Margin="40 10"/>
                <TextBlock Text="Логин" FontSize="13" Margin="0 0 0 -12"/>
                <StackPanel>
                    <TextBox x:Name="loginEnter" Margin="20 10"/>
                </StackPanel>

                <TextBlock Text="Пароль" FontSize="13" Margin="0 0 0 -12"/>
                <StackPanel>
                    <PasswordBox x:Name="passwordEnter" Margin="20 10"/>
                </StackPanel>

                <Button
                    x:Name="loginButton"
                    Content="Войти"
                    Margin="40 10"
                    Click="LogInButtonClick"
                    ></Button>

                <TextBlock
                    HorizontalAlignment="Center"
                    Text="Войти как гость"
                    FontSize="13"
                    Foreground="Blue"
                    MouseDown="TextBlockMouseDown"
                    />
            </StackPanel>
        </Border>
    </Grid>
</Window>
