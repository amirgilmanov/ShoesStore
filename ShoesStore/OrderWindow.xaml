<Window x:Class="ShoesStore.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ShoesStore"
        mc:Ignorable="d" Style="{StaticResource Windows}"
        Title="Список заказов" Height="600" Width="1000"
        Name="OrderWindow1">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10 10 10 5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="addOrder"
                    Grid.Column="0"
                    Content="Добавить заказ"
                    Click="AddNewOrderClick"
                    VerticalAlignment="Center"
                    Margin="5 0"
                    Width="150"
                    HorizontalAlignment="Left"
                    Visibility="{Binding AdminVisibility}"/>

            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            </StackPanel>
        </Grid>

        <Separator Grid.Row="0" VerticalAlignment="Bottom"/>

        <ScrollViewer Grid.Row="1" Margin="10">
            <ItemsControl x:Name="orderList" ItemsSource="{Binding AllOrderViewModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0 5 0 5" 
                                BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0 0 15 0">
                                    <TextBlock FontWeight="Bold" Margin="0 0 0 5">
                                        <Run Text="Заказ №"/>
                                        <Run Text="{Binding Id}"/>
                                        <Run Text=" | Номер: "/>
                                        <Run Text="{Binding Number}"/>
                                    </TextBlock>

                                    <StackPanel Orientation="Horizontal" Margin="0 2">
                                        <TextBlock Text="Статус: " FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding OrderStatus.Name}"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 2">
                                        <TextBlock Text="Пункт выдачи: " FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding PickUpPointAddress}" TextWrapping="Wrap"/>
                                    </StackPanel>

                                    <StackPanel Orientation="Horizontal" Margin="0 2">
                                        <TextBlock Text="Дата заказа: " FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Date, StringFormat='dd.MM.yyyy HH:mm'}"/>
                                    </StackPanel>

                                </StackPanel>

                                <StackPanel Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="10 0">
                                    <TextBlock Text="Дата доставки" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0 0 0 5"/>
                                    <TextBlock Text="{Binding DeliveryDate, StringFormat='dd.MM.yyyy'}" HorizontalAlignment="Right" FontSize="14"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="15 0 0 0">
                                    <Button Content="Редактировать"
                                            Click="EditOrderClick"
                                            Tag="{Binding}"
                                            Width="130"
                                            HorizontalAlignment="Right"
                                            Margin="10"
                                            Visibility="{Binding ElementName=OrderWindow1, Path=AdminVisibility}"/>
                                </StackPanel>

                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button x:Name="logOutButton"
                Content="Выйти"
                Grid.Row="2"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="20 0"
                Click="LogOutButtonClick"/>

    </Grid>
</Window>